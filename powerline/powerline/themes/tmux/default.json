{
  "default_module": "powerline.segments.common",
  "segment_data": {
    "uptime": {
      "before": "⇑ "
    },
    "branch": {
      "before": " "
    },
    "virtualenv": {
      "before": "ⓔ "
    },
    "external_ip": {
      "before": "ⓦ  "
    },
    "date": {
      "before": "⌚ "
    },
    "email_imap_alert": {
      "before": "✉ ",
      "args": {
        "username": "",
        "password": ""
      }
    }
  },
  "segments": {
    "right": [
      {
        "function": "network_load",
        "priority": 50,
        "args": {
          "recv_max": 104857600.0,
          "sent_max": 104857600.0
        }
      },
      {
        "function": "system_load",
        "priority": 50,
        "args": {
          "threshold_good": 0.5,
          "threshold_bad": 0.8
        }
      },
      {
        "function": "uptime",
        "priority": 50
      },
      {
        "function": "date",
        "args": {
          "format": "%a %Y-%m-%d"
        }
      },
      {
        "function": "date",
        "args": {
          "format": "%H:%M:%S",
          "istime": true
        }
      },
      {
        "function": "battery"
      },
			{
				"function": "hostname",
				"priority": 10,
			  "args": {
			  	"only_if_ssh": true
			  }
			}
    ]
  }
}
