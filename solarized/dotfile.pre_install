#!/usr/bin/bash

if [ -d ~/solarized ]; then
    ~/solarized
    git pull
else
    cd ~
    git clone git://github.com/altercation/solarized.git ~/solarized
fi


if [ -d ~/gnome-terminal-colors-solarized ]; then
    ~/gnome-terminal-colors-solarized
    git pull
else
    cd ~
    git clone git://github.com/sigurdga/gnome-terminal-colors-solarized \
        ~/gnome-terminal-colors-solarized
fi

~/gnome-terminal-colors-solarized/install.sh
