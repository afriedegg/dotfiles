{
	"default_module": "powerline.segments.common",
	"segment_data": {
		"hostname": {
			"before": " "
		},
		"virtualenv": {
			"before": "ⓔ  "
		},
		"branch": {
			"before": " "
		},
    "date": {
      "before": "⌚ "
    }
	},
	"segments": {
		"left": [
			{
				"function": "powerline.segments.shell.mode"
			},
			{
				"function": "hostname",
				"priority": 10,
			  "args": {
			  	"only_if_ssh": true
			  }
			},
			{
				"function": "user",
				"priority": 30
			},
			{
				"function": "virtualenv",
				"priority": 50
			},
			{
				"function": "powerline.segments.shell.cwd",
				"priority": 10,
				"args": {
					"dir_limit_depth": 4,
          "use_shortened_path": false
				}
			}
		],
		"right": [
			{
				"function": "powerline.segments.shell.jobnum",
				"priority": 20
			},
			{
				"function": "branch",
        "priority": 40,
        "args": {
          "status_colors": true
        }
			},
			{
				"function": "date",
        "priority": 40,
        "args": {
          "format": "%c"
        }
			}
		]
	}
}
